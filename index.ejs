</head>
<body>
    <h1>댓글 목록</h1>
    <ul>
    <% for (comments of comments) { %>
        <li><%= comments.content %></li>
        <form action="/update/<%= comments.id %>" method="post">
            <input type="text" name="content">
            <input type="submit" value="update">
        </form>
        <form action="/delete/<%= comments.id %>" method="post">
            <input type="submit" value="delete">
        </form>
    <% } %>
    </ul>
